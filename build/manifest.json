{
  "manifest_version": 2,
  "name": "Map Marklet",
  "description": "Map Marklet",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Map Marklet",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "./main.html"
  ],
  "permissions": [
    "tabs"
  ]
}
